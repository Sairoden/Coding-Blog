<%= render "shared/errors", obj: @article %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>
    <div div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :description %>
    </div>
    <div div class="col-sm-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-check form-check-inline">
      <div class="center offset-4">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "form-check-input p-2 input_checkbox") {cb.check_box(class: "form-check-label m-2") + cb.text} %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-md-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 offset-4">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
